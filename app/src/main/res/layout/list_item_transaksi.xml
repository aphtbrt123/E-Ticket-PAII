<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:minHeight="88dp"
    android:padding="16dp">



        <TextView
            android:id="@+id/judul_transaksi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="3"
            android:maxLines="1"
            android:text="Transaksi"
            android:textSize="16sp"
            android:textColor="@color/black" />

    <TextView
        android:id="@+id/total_harga_transaksi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/judul_transaksi"
        android:layout_gravity="center_vertical"
        android:maxLines="1"
        android:paddingEnd="16dp"
        android:text="Transaksi"
        android:textColor="@color/black" />

    <LinearLayout
        android:id="@+id/linear_layout_upper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/total_harga_transaksi"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tanggal_transaksi_dibuat"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:layout_below="@id/total_harga_transaksi"
            android:layout_gravity="center_vertical"
            android:maxLines="1"
            android:paddingEnd="16dp"
            android:text="Transaksi"
            android:textColor="@color/cardview_shadow_start_color" />

        <TextView
            android:id="@+id/status_transaksi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Status"
            android:textAlignment="textEnd"
            android:textColor="@color/black"
            android:textSize="12sp" />

    </LinearLayout>

</RelativeLayout>