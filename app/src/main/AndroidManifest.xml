<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kantin.e_ticket">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="28" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/config_network"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ETicket"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".activity.DetailTransaksiActivity"
            android:exported="false" />
        <activity
            android:name=".activity.ListTransaksiActivity"
            android:exported="false" />
        <activity
            android:name=".activity.BaruActivity"
            android:exported="true" />
        <activity
            android:name=".activity.Main2Activity"
            android:exported="true"
            android:label="@string/title_activity_main2" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.LoginActivity"
            android:exported="true" />
        <activity android:name=".activity.MasukActivity" />
        <activity android:name=".activity.RegisterActivity" />
        <activity android:name=".activity.DetailTicketActivity" />
    </application>

</manifest>